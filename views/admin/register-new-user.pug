extends ../layout.pug
block content
    div(class='container py-3')
        div(class='row')
            div(class='col-sm-12')
                h1 Register new user
            
            if (flashMessage.length > 0)
                div(class='col-sm-12 py-3')
                    div(class="alert alert-danger")= flashMessage


    div(class='container py-3')
        div(class='row')
            div(class='col-sm-12')
                form(method='post' action='/admin/users/register-new-user')
   
                    div(class='form-group row')
                        label(for='inputEmail' class='col-2 col-form-label') E-Mail
                        div(class='col-10')
                            input(type='text' class='form-control' id='inputEmail' name='email')
                
                    div(class='form-group row')
                        label(for='inputPassword' class='col-2 col-form-label') Passwort
                        div(class='col-10')
                            input(type='password' class='form-control' id='inputPassword' name='password')
                    
                    div(class='form-group row')
                        div(class='col-sm-10 offset-sm-2') 
                            button(type='submit' class='btn btn-primary-red') add user now ...
